<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:paddingBottom="16dp"

    android:paddingLeft="16dp"

    android:paddingRight="16dp"

    android:paddingTop="16dp"
    tools:context="com.gelves.uriel.dreamlisterapp.MainActivity">

    <EditText

        android:id="@+id/nameTxt"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"

        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"

        android:ems="10"

        android:hint="Name"

        android:inputType="textPersonName"

        android:visibility="visible"

        tools:layout_editor_absoluteX="-2dp"

        tools:layout_editor_absoluteY="28dp" />



    <EditText

        android:id="@+id/descriptTxt"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:layout_marginTop="21dp"

        android:ems="10"

        android:hint="Description"

        android:inputType="textPersonName"

        android:visibility="visible"

        android:layout_below="@+id/nameTxt"

        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true" />



    <EditText

        android:id="@+id/priceTxt"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:ems="10"

        android:hint="Price"

        android:inputType="textPersonName"

        android:visibility="visible"

        android:layout_below="@+id/descriptTxt"

        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true" />



    <ImageView

        android:id="@+id/imageView2"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        app:srcCompat="@mipmap/ic_launcher"

        android:layout_marginRight="62dp"
        android:layout_marginEnd="62dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/priceTxt"
        android:layout_toLeftOf="@+id/dreamlistBtn"
        android:layout_toStartOf="@+id/dreamlistBtn" />



    <Button

        android:id="@+id/chooseImgBtn"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="Choose Image"

        android:layout_marginTop="12dp"

        android:layout_alignTop="@+id/imageView2"
        android:layout_alignRight="@+id/dreamlistBtn"
        android:layout_alignEnd="@+id/dreamlistBtn" />



    <Button

        android:id="@+id/addBtn"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="Add"

        android:layout_marginTop="52dp"

        android:layout_below="@+id/chooseImgBtn"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />



    <Button

        android:id="@+id/dreamlistBtn"

        android:layout_width="wrap_content"

        android:layout_height="wrap_content"

        android:text="Dream List"

        android:layout_alignBaseline="@+id/addBtn"
        android:layout_alignBottom="@+id/addBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="48dp"
        android:layout_marginEnd="48dp" />

</RelativeLayout>
